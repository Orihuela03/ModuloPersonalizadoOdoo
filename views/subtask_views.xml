<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_subtask_tree" model="ir.ui.view">
        <field name="name">subtask.tree</field>
        <field name="model">project.subtask</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="task_id" />
            </tree>
        </field>
    </record>

    <record id="view_subtask_form" model="ir.ui.view">
        <field name="name">subtask.form</field>
        <field name="model">project.subtask</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="task_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>